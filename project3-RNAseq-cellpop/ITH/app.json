{
  "class": "CommandLineTool",
  "baseCommand": "Rscript BayCount.R",
  "outputs": [
    {
      "id": "#ICF_output",
      "type": "File",
      "outputBinding": {
        "glob": {
          "engine": "#cwl-js-engine",
          "class": "Expression",
          "script": "$job.inputs.output_file_name"
        }
      }
    }
  ],
  "inputs": [
    {
      "type": "File",
      "description": "Files to process with BayCount",
      "label": "input htseq-count",
      "id": "#input_htseq",
      "required" : true
    },
    {
      "type": "string",
      "id": "#output_file_name",
      "required" : true
    }
  ],
  "requirements": [
    {
      "requirements": [
        {
          "dockerPull": "rabix/js-engine",
          "class": "DockerRequirement"
        }
      ],
      "class": "ExpressionEngineRequirement",
      "id": "#cwl-js-engine"
    }
  ],
  "stdout": {
    "engine": "#cwl-js-engine",
    "class": "Expression",
    "script": "$job.inputs.output_file_name"
  },
  "label": "app_ith",
  "id": "app_ith_json",
  "sbg:contributors": [
     "l.soudade",
     "n.alcala"
   ],
  "hints": [
    {
      "class": "sbg:CPURequirement",
      "value": 1
    },
    {
      "class": "sbg:MemRequirement",
      "value": 1000
    },
    {
      "dockerImageId": "",
      "class": "DockerRequirement",
      "dockerPull": "iarcbioinfo/sbg-cgc_course2018_project3:ith"
    }
  ]
}
