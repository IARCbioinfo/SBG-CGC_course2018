{
  "class": "CommandLineTool",
  "baseCommand": "samtools view",
  "outputs": [
    {
      "id": "#header_output",
      "type": "File",
      "outputBinding": {
        "glob": {
          "engine": "#cwl-js-engine",
          "class": "Expression",
          "script": "$job.inputs.output_file_name"
        }
      }
    }
  ],
  "inputs": [
    {
      "type": "File",
      "description": "BAM file to extract the header",
      "label": "input BAM file",
      "id": "#input_BAM",
      "required" : true,
      "inputBinding": {
        "secondaryFiles" : "^.bai",
        "separate": true,
        "sbg:cmdInclude": true,
        "position": 0,
        "prefix": ""
      }
    },
    {
      "type": "string",
      "id": "#output_file_name"
    }
  ],
  "requirements": [
    {
      "requirements": [
        {
          "dockerPull": "rabix/js-engine",
          "class": "DockerRequirement"
        }
      ],
      "class": "ExpressionEngineRequirement",
      "id": "#cwl-js-engine"
    }
  ],
  "stdout": {
    "engine": "#cwl-js-engine",
    "class": "Expression",
    "script": "$job.inputs.output_file_name"
  },
  "label": "samtools_header",
  "id": "samtools_header_json",
  "sbg:contributors": [
     "tdelhomme"
   ],
  "hints": [
    {
      "class": "sbg:CPURequirement",
      "value": 1
    },
    {
      "class": "sbg:MemRequirement",
      "value": 1000
    },
    {
      "dockerImageId": "",
      "class": "DockerRequirement",
      "dockerPull": "biocontainers/samtools"
    }
  ],
  "arguments": [
    {
      "separate": true,
      "position": -1,
      "valueFrom": "-H"
    }
  ]
}
